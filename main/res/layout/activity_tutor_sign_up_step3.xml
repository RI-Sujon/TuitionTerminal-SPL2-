<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tutor.TutorSignUpActivityStep3">

    <LinearLayout
        android:id="@+id/upBar"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Navy">


        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_weight="2"
            android:max="2"
            android:progress="2"
            android:progressTint="@color/White"
            android:thumbTint="@color/White"
            android:thumb="@drawable/thumb" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleBar"
        android:layout_weight="20"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="30dp"
        android:layout_above="@+id/downBar"
        android:background="@color/Beige">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textSize="20dp"/>;

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/mediumSpinner"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:textSize="20dp"
                            android:entries="@array/medium_array" />

                        <TextView
                            android:id="@+id/mediumTextView"
                            android:layout_toEndOf="@+id/mediumSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Select Medium"
                            android:background="@color/WhiteSmoke"
                            android:inputType="textEmailAddress"
                            android:textSize="20dp" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preferred Class"
                        android:textSize="20dp"/>;

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/classTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/WhiteSmoke">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/classTextView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/GhostWhite"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/classTextView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/GhostWhite"
                                    android:visibility="gone"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="15dp" />
                                <TextView
                                    android:id="@+id/classTextView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:background="@color/GhostWhite"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/classTextView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/GhostWhite"
                                    android:visibility="gone"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/classTextView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/GhostWhite"
                                    android:visibility="gone"
                                    android:textSize="15dp" />
                                <TextView
                                    android:id="@+id/classTextView6"
                                    android:layout_toRightOf="@+id/classTextView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:layout_marginLeft="10dp"
                                    android:background="@color/GhostWhite"
                                    android:textSize="15dp" />

                                <Spinner
                                    android:id="@+id/classSpinner"
                                    android:layout_width="100dp"
                                    android:layout_height="35dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@color/colorPrimary"
                                    android:textSize="15dp"
                                    android:entries="@array/preferredClass_array" />

                                <Button
                                    android:id="@+id/removeClass"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:text="Remove"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="10dp"/>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preferred Group"
                        android:textSize="20dp"/>;

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/groupSpinner"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:textSize="15dp"
                            android:entries="@array/preferredGroup_array" />

                        <TextView
                            android:id="@+id/groupTextView"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Select Group"
                            android:background="@color/WhiteSmoke"
                            android:inputType="textEmailAddress"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preferred Subject"
                    android:textSize="20dp" />;

                    <LinearLayout
                        android:id="@+id/subjectTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/WhiteSmoke">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/subjectTextView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/GhostWhite"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/subjectTextView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/GhostWhite"
                                android:visibility="gone"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/subjectTextView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:background="@color/GhostWhite"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/subjectTextView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/GhostWhite"
                                android:visibility="gone"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/subjectTextView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/GhostWhite"
                                android:visibility="gone"
                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/subjectTextView6"
                                android:layout_toRightOf="@+id/classTextView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_marginLeft="10dp"
                                android:background="@color/GhostWhite"
                                android:textSize="15dp" />

                            <Spinner
                                android:id="@+id/subjectSpinner"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="10dp"
                                android:outlineSpotShadowColor="@color/Tomato"
                                android:background="@color/colorPrimary"
                                android:entries="@array/preferredSubject_array" />

                            <Button
                                android:id="@+id/removeSubject"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:text="Remove"
                                android:textSize="12dp"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Days per Week/Month"
                        android:textSize="20dp"/>;

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/daysPerWeekOrMonthSpinner"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:textSize="20dp"
                            android:entries="@array/daysPerWeekOrMonth_array" />

                        <TextView
                            android:id="@+id/daysPerWeekOrMonthTextView"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Select Days Per Week"
                            android:background="@color/WhiteSmoke"
                            android:inputType="textEmailAddress"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Salary Upto"
                        android:textSize="20dp" />;

                    <Spinner
                        android:id="@+id/salaryRangeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textAlignment="viewEnd"
                        android:background="@color/WhiteSmoke"
                        android:entries="@array/salaryUpto_array" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/downBar"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Navy">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:text="FINISH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:onClick="signUpCompletion"  />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:outlineSpotShadowColor="@color/Green"
                android:outlineAmbientShadowColor="@color/Blue"
                android:visibility="invisible"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>