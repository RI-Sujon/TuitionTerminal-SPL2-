<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/CornflowerBlue"
    tools:context=".Guardian.GuardianHomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Post For TUTOR"
            android:textSize="20dp"
            android:layout_marginBottom="40dp"
            android:background="@color/Tomato"
            android:onClick="goToGuardianPostForTuitionActivity"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Search Tutor Profile"
            android:background="@color/OrangeRed"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:onClick="goToGuardianTutorProfileViewActivity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Log Out"
            android:background="@color/White"
            android:textSize="20dp"
            android:onClick="signOut"/>

    </LinearLayout>

</LinearLayout>